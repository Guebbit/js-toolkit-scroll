{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": "src",
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./src",
    "./types"
  ],
  "exclude": [
    "./node_modules"
  ]
}
